<h1>Crea tu cuenta</h1>

 <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "user") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>



<%= form_for @user do |f| %>
  <div class="field">
    <%= f.label :email, "Email" %>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password, "Contrasena" %>
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation, "Contrasena Otra vez" %>
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="field">
    <%= f.submit "Crear Cuenta" %>
  </div>
<% end %>
